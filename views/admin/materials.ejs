<%- include('./includes/head.ejs') %>

<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%- include('./includes/header.ejs') %>

  <%- include('./includes/sidebar.ejs') %>
  
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        O'quv Materiallari
        <small>Boshqaruv paneli</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/@admin/home"><i class="fa fa-dashboard"></i> Bosh sahifa</a></li>
        <li><a href="/@admin/materials">O'quv materiallari</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>ID</th>
                  <th>Sarlavha</th>
                  <th>Tavsif</th>
                  <th>Material Turi</th>
                  <th>Fayl holati</th>
                  <th>Yaratilgan sana</th>
                  <th>O'zgartirilgan sana</th>
                </tr>
                <% for (let i = 0; i < materials.length; i++) { %>
                <tr>
                  <td><%= materials[i].id %></td>
                  <td><%= materials[i].title %></td>
                  <td><%= materials[i].description %></td>
                  <td><%= materials[i].category_id %></td>
                  <td><span class="label label-success"><%= materials[i].file_path %></span></td>
                  <td><%= materials[i].created_at %></td>
                  <td><%= materials[i].updated_at %></td>
                </tr>
                <% } %>
                
              </table>
              <div class="box-footer">
                <!-- <button class="btn btn-default">Orqaga</button> -->
                <button data-toggle="modal" data-target="#modal-default" class="btn btn-info pull-right" >Yangi yaratish</button>
                
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>

    </section>
    <!-- /.content -->
  </div>

  <!--  Add/update modal -->
  <div class="modal fade" id="modal-default">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="modalTitle">Yangi material</h4>
        </div>

        <form role="form" id="itemForm" action="" method="POST" enctype="multipart/form-data">
          <!-- for PUT when updating -->
          <input type="" name="_method" id="methodField" value="">
          <input type="" name="id" id="itemId" value="">
          <input type="" name="category_id" id="categoryId" value="">

          <div class="modal-body">
            <div class="box-body">
              <div class="form-group">
                
                <label for="title">Fayl nomi</label>
                <input type="text" class="form-control" id="title" name="category" placeholder="Fayl nomi...">
                
                <label for="title">Material haqida qisqacha</label>
                <input type="text" class="form-control" id="title" name="description" placeholder="Info...">
              
                <label for="image">Rasm</label>
                <input type="file" name="image" id="image">

                <label for="material_file">Hujjat</label>
                <input type="file" name="doc" id="material_file">

              </div>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Yopish</button>
            <button type="submit" class="btn btn-primary" id="submitBtn">Qo'shish</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <!-- Delete modal -->
  <div class="modal fade" id="modal-delete">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-red">
          <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
          <h4 class="modal-title">O‘chirishni tasdiqlash</h4>
        </div>

        <form id="deleteForm" action="" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <div class="modal-body">
            <p>
              Quyidagi menuni o‘chirmoqchimisiz?
              <br>
              <strong id="deleteName"></strong>
            </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Bekor qilish</button>
            <button type="submit" class="btn btn-danger">O‘chirish</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <script>
    // New button
    $('[data-target="#modal-default"][data-toggle="modal"]').on('click', function (e) {
      const isEditBtn = $(this).hasClass('btn-edit');
      const form = $('#itemForm');
      const title = $('#modalTitle');
      const submitBtn = $('#submitBtn');
      const methodField = $('#methodField');
      const idInput = $('#itemId');
      const nameInput = $('#item');
      const categoryInput = $('#categoryId');
      const pathname = window.location.pathname;
      const category_id = pathname.split('/materials/')[1];

      if (isEditBtn) {
        const id = $(this).data('id');
        const name = $(this).data('name');

        // Edit mode
        title.text("Menuni tahrirlash");
        submitBtn.text("Saqlash");

        form.attr('action', pathname + '/items/' + id);
        methodField.val('PUT');    // method-override will catch this
        idInput.val(id);
        nameInput.val(name);
      } else {
        // Create mode
        title.text("Yangi menu");
        submitBtn.text("Qo'shish");

        form.attr('action', pathname + '/items');
        methodField.val('');
        idInput.val('');
        nameInput.val('');
        categoryInput.val(category_id);
      }

      // const form = document.getElementById('itemForm');
      console.log(document.getElementById("itemForm").action);

    });
    
    // Clear on modal hide
    $('#modal-default').on('hidden.bs.modal', function () {
      $('#itemForm')[0].reset();
      $('#methodField').val('');
      $('#itemId').val('');
      $('#modalTitle').text('Yangi menu');
      $('#submitBtn').text("Qo'shish");
      $('#itemForm').attr('action', pathname);
    });
  </script>
  <script>
    $('.btn-delete').on('click', function () {
      const id = $(this).data('id');
      const name = $(this).data('name');
      const pathname = window.location.pathname;

      // Set confirm text
      $('#deleteName').text(name);

      // Point the form to the resource
      $('#deleteForm').attr('action', pathname + '/items/' + id);
    });

    // Optional safety: clear action when modal hides
    $('#modal-delete').on('hidden.bs.modal', function () {
      $('#deleteForm').attr('action', '');
      $('#deleteName').text('');
    });
  </script>

  <%- include('./includes/footer.ejs') %>

  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>

  <%- include('./includes/footer.ejs') %>

  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<%- include('./includes/end.ejs') %>
</body>
</html>

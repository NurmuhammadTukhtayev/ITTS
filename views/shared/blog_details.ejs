<%- include('./includes/head.ejs') %>

<body>
    <div id="preloader" class="preloader"><button class="th-btn th-radius preloaderCls">Cancel Preloader</button>
        <div id="loader" class="th-preloader">
            <div class="animation-preloader">
                <div class="txt-loading"><span preloader-text="W" class="characters">W</span> <span preloader-text="E"
                        class="characters">E</span> <span preloader-text="B" class="characters">B</span> <span
                        preloader-text="T" class="characters">T</span> <span preloader-text="E"
                        class="characters">E</span> <span preloader-text="C" class="characters">C</span> <span
                        preloader-text="K" class="characters">K</span></div>
            </div>
        </div>
    </div>

    <%- include('./includes/navbar.ejs') %>

    <div class="breadcumb-wrapper" data-bg-src="assets/img/bg/breadcumb-bg.jpg">
        <div class="container">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title"><%= blog.title %></h1>
                <ul class="breadcumb-menu">
                    <li><a href="/">Bosh sahifa</a></li>
                    <li>Blog</li>
                    <li><%= blog.title %></li>
                </ul>
            </div>
        </div>
    </div>
    <section class="th-blog-wrapper blog-details space-top space-extra-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xxl-8 col-lg-7">
                    <div class="th-blog blog-single">
                        <div class="blog-img"><img src="/assets/img/blog/<%= blog.image_url %>" alt="Blog Image"></div>
                        <div class="blog-content">
                            <div class="blog-meta"><a class="author" href="blog.html"><img
                                        src="/assets/img/blog/author-1-1.png" alt="avater"> By <%= blog.author %></a> <a
                                    href="blog.html"><i class="fa-light fa-calendar-days"></i><%= blog.published_on %></a>
                            </div>
                            <h2 class="blog-title"><%= blog.title %></h2>
                            <%= blog.content %>
                        </div>
                        <div class="share-links clearfix">
                            <div class="row justify-content-between">
                                <!-- <div class="col-sm-auto"><span class="share-links-title">Tags:</span>
                                    <div class="tagcloud"><a href="blog.html">Education</a> <a
                                            href="blog.html">Online</a></div>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xxl-4 col-lg-5">
                    <aside class="sidebar-area">
                        <div class="widget">
                            <h3 class="widget_title">Yangi postlar</h3>
                            <div class="recent-post-wrap">
                            <% for (let i = 0; i < blogs.length; i++) { %>
                                <div class="recent-post">
                                    <div class="media-img"><a href="/blog/<%= blogs[i].id %>"><img
                                                src="/assets/img/blog/<%= blogs[i].image_url %>" alt="Blog Image"></a></div>
                                    <div class="media-body">
                                        <h4 class="post-title"><a class="text-inherit"
                                                href="/blog/<%= blogs[i].id %>"><%= blogs[i].title %>.</a>
                                        </h4>
                                        <div class="recent-post-meta"><a href="/blog/<%= blogs[i].id %>"><i
                                                    class="fal fa-calendar-days"></i><%= blogs[i].published_on %></a></div>
                                    </div>
                                </div>
                            <% } %>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>

    <%- include('./includes/footer.ejs') %>
    
    <%- include('./includes/end.ejs') %>
</body>

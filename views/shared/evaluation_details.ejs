<%- include('./includes/head.ejs') %>

<body class="theme3">
    <%- include('./includes/loader.ejs') %>

    <%- include('./includes/navbar.ejs') %>

    <div class="breadcumb-wrapper" data-bg-src="assets/img/bg/breadcumb-bg.jpg">
        <div class="container">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title"><%= blog.title %></h1>
                <ul class="breadcumb-menu">
                    <li><a href="/">Главная страница</a></li>
                    <li>Оценка и прогресс</li>
                    <li>Пост оценки</li>
                    <li><%= blog.title %></li>
                </ul>
            </div>
        </div>
    </div>
    <section class="th-blog-wrapper blog-details space-top space-extra-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xxl-8 col-lg-7">
                    <div class="th-blog blog-single">
                        <div class="blog-img"><img src="/uploads/img/<%= blog.image_url %>" alt="Blog Image"></div>
                        <div class="blog-content">
                            <div class="blog-meta"><a class="author" href="#"><img
                                        src="/assets/img/blog/author-1-1.png" alt="avater"> By <%= blog.author %></a> <a
                                    href="#"><i class="fa-light fa-calendar-days"></i><%= blog.published_on %></a>
                            </div>
                            <%- blog.content %>
                        </div>
                        <div class="share-links clearfix">
                            <div class="row justify-content-between">
                                <!-- <div class="col-sm-auto"><span class="share-links-title">Tags:</span>
                                    <div class="tagcloud"><a href="#">Education</a> <a
                                            href="#">Online</a></div>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('./includes/footer.ejs') %>
    
    <%- include('./includes/end.ejs') %>
</body>

<%- include('./includes/head.ejs') %>

<body class="theme3">
    <%- include('./includes/loader.ejs') %>

    <%- include('./includes/navbar.ejs') %>
    
    <div class="breadcumb-wrapper" data-bg-src="assets/img/bg/breadcumb-bg.jpg">
        <div class="container">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title" style="text-transform: capitalize;"><%= category %></h1>
                <ul class="breadcumb-menu">
                    <li><a href="/">Главная страница</a></li>
                    <li><a href="/">Учебные материалы</a></li>
                    <li style="text-transform: capitalize;" ><%= category %></li>
                </ul>
            </div>
        </div>
    </div>
    
     <section class="space" id="service-sec">
    <div class="container">
      <div class="row gy-4">

        <% if (materials.length === 0) { %>
          <div class="col-12 text-center">
            <p style="font-size: 1.2rem; color: #666;">
              Пока нет доступных учебных материалов.
            </p>
          </div>
        <% } else { %>
          <% for (let i = 0; i < materials.length; i++) { %>
            <div class="col-md-6 col-xl-4">
              <div class="service-card">
                <div class="service-card_number"><%= i + 1 %></div>
                <div class="shape-icon">
                  <img src="/assets/img/icon/service_card_1.svg" alt="Icon">
                  <span class="dots"></span>
                </div>
                <h3 class="box-title">
                  <a href="#"><%= materials[i].title %></a>
                </h3>
                <p class="service-card_text"><%= materials[i].description %></p>
                <a href="download/<%= materials[i].file_path %>" class="th-btn">
                  Скачать сейчас<i class="fa-regular fa-arrow-right ms-2"></i>
                </a>
                <div class="bg-shape">
                  <img src="/assets/img/bg/service_card_bg.png" alt="bg">
                </div>
              </div>
            </div>
          <% } %>
        <% } %>

      </div>
    </div>
  </section>
    
    
    <%- include('./includes/footer.ejs') %>
    
    <%- include('./includes/end.ejs') %>
</body>

</html>